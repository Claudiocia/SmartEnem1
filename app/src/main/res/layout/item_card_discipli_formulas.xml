<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="0dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_card_discipli_formulas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@null" />

        <TextView
            android:id="@+id/titulo_discipli_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card_discipli_formulas"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descri_discipli_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_discipli_formula"
            android:layout_alignLeft="@+id/titulo_discipli_formula"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            android:textColor="@color/colorLightBlue"
            android:textSize="14dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>