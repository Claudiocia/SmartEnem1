<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/grayesc"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/txtcoment_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Aprenda um pouco mais"
        android:layout_gravity="center"
        android:gravity="center"/>
    <View
        android:id="@+id/Divisor1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="15dp"
        android:background="#A8A8A8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.bluejamesbond.text.DocumentView
            xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto_coment_questao"
            ext:documentView_insetPaddingLeft="15dp"
            ext:documentView_insetPaddingRight="15dp"
            ext:documentView_insetPaddingTop="10dp"
            ext:documentView_hyphen="-"
            ext:documentView_text=""
            ext:documentView_textAlignment="justified"
            ext:documentView_textColor="@color/white"
            ext:documentView_textFormat="plain"
            ext:documentView_textSize="16sp"
            ext:documentView_textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texto_coment_infor"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <View
        android:id="@+id/Divisor2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="15dp"
        android:background="#A8A8A8" />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Voltar"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorLightBlueBox"/>


    </LinearLayout>

</LinearLayout>