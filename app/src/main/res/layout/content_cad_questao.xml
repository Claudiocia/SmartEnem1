<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.ciadeideias.smartenem.CadQuestaoActivity"
    tools:showIn="@layout/activity_cad_questao">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_area_conhec"
                android:inputType="number"
                android:background="@color/gray"
                android:hint="*Id Area de Conhecimento"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_ano_aplic"
                android:layout_below="@+id/edt_area_conhec"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*Ano de aplicação da questão"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_enunciado"
                android:layout_below="@+id/edt_ano_aplic"
                android:background="@color/gray"
                android:minHeight="100dp"
                android:paddingTop="10dp"
                android:hint="*Enunciado"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_margin="5dp"
                android:layout_weight="0.57"
                android:singleLine="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:inputType="textMultiLine|textLongMessage" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_txt_apoio"
                android:layout_below="@+id/edt_enunciado"
                android:background="@color/gray"
                android:minHeight="100dp"
                android:paddingTop="10dp"
                android:hint="*texto de apoio"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_margin="5dp"
                android:layout_weight="0.57"
                android:singleLine="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:inputType="textMultiLine|textLongMessage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_txt_apoio"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/tv_conf_img"
                android:text="Confirma Imagem?"/>

            <RadioGroup
                android:id="@+id/confirm_img"
                android:layout_below="@+id/tv_conf_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/img_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim"/>

                <RadioButton
                    android:id="@+id/img_nao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não"/>
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_img_end"
                android:layout_below="@+id/confirm_img"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*endereço da imagem"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_opcao_a"
                android:layout_below="@+id/edt_img_end"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*opção A"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_opcao_b"
                android:layout_below="@+id/edt_opcao_a"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*opção B"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_opcao_c"
                android:layout_below="@+id/edt_opcao_b"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*opção C"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_opcao_d"
                android:layout_below="@+id/edt_opcao_c"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*opção D"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_opcao_e"
                android:layout_below="@+id/edt_opcao_d"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*opção E"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edt_resposta"
                android:layout_below="@+id/edt_opcao_e"
                android:inputType="text"
                android:background="@color/gray"
                android:hint="*resposta"
                android:textColorHint="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:ems="3"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_comentario"
                android:layout_below="@+id/edt_resposta"
                android:background="@color/gray"
                android:minHeight="100dp"
                android:paddingTop="10dp"
                android:hint="*comentário"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_margin="5dp"
                android:layout_weight="0.57"
                android:singleLine="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:inputType="textMultiLine|textLongMessage" />

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/edt_comentario"
                android:id="@+id/btn_gravar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:onClick="gravarQuestao"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#ccc"
                android:textAlignment="gravity" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
