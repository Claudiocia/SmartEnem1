<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_list_dicas"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:src="@null"/>

        <TextView
            android:id="@+id/titulo_lista_dica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_list_dicas"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Nome que tava errado"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/descri_lista_dica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_lista_dica"
            android:layout_alignLeft="@+id/titulo_lista_dica"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:maxLines="3"/>

    </RelativeLayout>

</RelativeLayout>
