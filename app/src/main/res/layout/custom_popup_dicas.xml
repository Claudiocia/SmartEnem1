<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/grayesc"
    android:padding="5dp"
    android:layout_gravity="center">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="0dp"
        android:id="@+id/iv_titulo_dica_pag"
        android:layout_gravity="center_horizontal"/>
    <View
        android:id="@+id/Divisor1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="15dp"
        android:background="#A8A8A8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tit_dica"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:maxLines="3"/>
        <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imagem_dica"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <com.bluejamesbond.text.DocumentView
            xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto_dica"
            ext:documentView_insetPaddingLeft="15dp"
            ext:documentView_insetPaddingRight="15dp"
            ext:documentView_insetPaddingTop="10dp"
            ext:documentView_hyphen="-"
            ext:documentView_text=""
            ext:documentView_textAlignment="justified"
            ext:documentView_textColor="@color/white"
            ext:documentView_textFormat="plain"
            ext:documentView_textSize="16sp"/>
    </LinearLayout>
    <View
        android:id="@+id/Divisor2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="15dp"
        android:background="#A8A8A8" />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_voltar_dica"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Voltar"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorLightBlueBox"/>

    </LinearLayout>

</LinearLayout>