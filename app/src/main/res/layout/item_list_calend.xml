<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toRightOf="@+id/thumb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mesano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Aqui vai o mÃªs e o ano do evento"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mesano"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Aqui vai o titulo do evento"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/resumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Aqui vai o resumo"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/data_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resumo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:padding="1dp"
            android:text="Aqui vem a data do evento"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp" />
        
    </RelativeLayout>
</RelativeLayout>
