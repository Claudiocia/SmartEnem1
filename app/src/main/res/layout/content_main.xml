<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.ciadeideias.smartenem.MainActivity"
    tools:showIn="@layout/activity_main">


    <com.bluejamesbond.text.DocumentView
        xmlns:ext="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teste1"
        ext:documentView_insetPaddingLeft="15dp"
        ext:documentView_insetPaddingRight="15dp"
        ext:documentView_insetPaddingTop="10dp"
        ext:documentView_hyphen="-"
        ext:documentView_text=""
        ext:documentView_textAlignment="justified"
        ext:documentView_textColor="@color/colorPrimaryDark"
        ext:documentView_textFormat="plain"
        ext:documentView_textSize="16sp"
        ext:documentView_textStyle="bold" />
    <ImageView
        android:id="@+id/imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teste1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_opcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagem"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_opcoes"
        android:text="Nova QuestÃ£o"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/btn_enviar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:onClick="novaQuestao"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#ccc"
        android:textAlignment="gravity" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_grafico"
        android:layout_below="@+id/btn_enviar"
        android:background="#91abaf"
        android:text="Salvar"
        android:textStyle="bold"
        android:textColor="@color/black"/>
</RelativeLayout>
